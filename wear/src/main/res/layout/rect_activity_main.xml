<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:background="#393939"
        android:gravity="center"
        tools:context=".MainActivity"
        tools:deviceIds="wear_square">

    <LinearLayout
            android:id="@+id/connectionInfoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center">
            <TextView
                    android:id="@+id/connectionInfoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Disconnected"
                    android:textSize="19sp"
                    android:textColor="@color/red"/>
                <ImageView
                        android:id="@+id/connectionInfoImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/status_disconnected"/>
            <TextView
                    android:id="@+id/batteryInfoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="100%"
                    android:textSize="15sp"
                    android:textColor="@color/green"
                    android:visibility="gone"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:background="#666666"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="8dp"
                android:gravity="center">

            <android.support.v7.widget.CardView
                    android:id="@+id/playMediaCardView"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardBackgroundColor="#1586dc"
                    android:onClick="startMedia"
                    android:visibility="gone" card_view:cardElevation="3dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp"
                        android:gravity="center"
                        android:text="â–¶"
                        android:textSize="26sp"
                        android:textColor="@color/white"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardBackgroundColor="#373737">

                <Switch
                        android:id="@+id/serviceSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="2dp"
                        android:text="@string/ios_service"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-condensed"
                        android:theme="@style/MaterialTheme"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginTop="6dp"
                    card_view:cardCornerRadius="6dp"
                    card_view:cardBackgroundColor="#373737"
                    android:onClick="goToSettings" android:visibility="gone">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start|center_vertical"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Settings"
                        android:textSize="20sp"
                        android:textColor="@color/white"/>
            </android.support.v7.widget.CardView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="#44ffffff"
                    android:text="@string/app_version"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
