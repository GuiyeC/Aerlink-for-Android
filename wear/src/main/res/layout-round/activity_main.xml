<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".ui.MainActivity"
    tools:deviceIds="wear_round">

    <LinearLayout
        android:id="@+id/connectionInfoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:gravity="center"
        android:background="@color/surface"
        android:visibility="visible"
        tools:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/connectionInfoImageView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/status_disconnected"/>
            <TextView
                android:id="@+id/batteryInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/connection_state_ready"
                android:visibility="gone"
                tools:text="100%"
                tools:visibility="visible"/>
        </LinearLayout>
        <TextView
            android:id="@+id/connectionInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="start"
            android:text="@string/connection_state_disconnected"
            android:textSize="18sp"
            android:textColor="@color/connection_state_disconnected"
            android:maxLines="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="23dp"
                card_view:cardBackgroundColor="@color/surface"
                card_view:cardElevation="0dp">

                <Switch
                    android:id="@+id/serviceSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/on_surface"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/unbondButton"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardCornerRadius="23dp"
                card_view:cardBackgroundColor="@color/surface"
                card_view:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/general_unbond"
                    android:textColor="@color/on_surface"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-condensed"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/on_background"
                android:text="@string/app_version"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>